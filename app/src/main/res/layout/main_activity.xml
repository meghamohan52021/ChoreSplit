<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E4EB"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnViewAllChores"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#F8CBD3"
        android:gravity="center"
        android:text="ALL CHORES"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_monali"
        android:layout_width="213dp"
        android:layout_height="174dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:elevation="5dp"
        android:src="@drawable/monali_emoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPerson2"
        android:layout_width="260dp"
        android:layout_height="84dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="#F8CBD3"
        android:gravity="center"
        android:text="MONALI"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button for Megha -->
    <ImageView
        android:id="@+id/imageView_megha"
        android:layout_width="178dp"
        android:layout_height="153dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        android:src="@drawable/megha_emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPerson1"
        android:layout_width="256dp"
        android:layout_height="90dp"
        android:backgroundTint="#F8CBD3"
        android:gravity="center"
        android:text="MEGHA"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />



    <ImageView
        android:id="@+id/imageView_mushkan"
        android:layout_width="188dp"
        android:layout_height="176dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        android:src="@drawable/mushkan_emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPerson2" />

    <Button
        android:id="@+id/btnPerson3"
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F8CBD3"
        android:gravity="center"
        android:text="MUSHKAN"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerson2" />

    <!-- Button for Nithya -->

    <ImageView
        android:id="@+id/imageView_nithya"
        android:layout_width="217dp"
        android:layout_height="179dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:elevation="5dp"
        android:src="@drawable/nithya_emoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerson3" />

    <Button
        android:id="@+id/btnPerson4"
        android:layout_width="250dp"
        android:layout_height="82dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#F8CBD3"
        android:gravity="center"
        android:text="NITHYA"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerson3" />

</androidx.constraintlayout.widget.ConstraintLayout>






